@model IEnumerable<EventManager.Models.Event>

@{
    ViewBag.Title = "Index";
}

<h2>Список мероприятий</h2>


<table class="table">
    <tr>
        <th>
            Название
        </th>
        <th>
            Информация
        </th>
        <th>
            Дата и Время
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Information)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td>
            @Html.ActionLink("Зарегистрироваться", "Register", new { id=item.Id})
            @if (Request.IsAuthenticated && User.Identity.Name == "admin@mail.ru")
            {
                <span> | </span> @Html.ActionLink("Удалить", "Remove", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>
